<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="magitUI.CreateEmptyRepoController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="0.0" prefWidth="20.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="0.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="NEVER" minWidth="10.0" percentWidth="0.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="NEVER" minWidth="10.0" percentWidth="0.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="NEVER" minWidth="10.0" percentWidth="0.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="0.0" prefWidth="20.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="20.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="20.0" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <Label text="Choose location to create empty repository:" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
      <Button fx:id="openDirChooser" mnemonicParsing="false" onAction="#openDirChooser" text="Browse" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
      <TextField fx:id="chosenDirPathForRepo" editable="false" prefHeight="31.0" prefWidth="348.0" promptText="Folder path" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="3" />
      <Label text="Enter folder name:" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
      <TextField fx:id="folderNameTxtFld" prefHeight="25.0" prefWidth="211.0" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="5" />
      <Label text="Enter repository name:" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7" />
      <TextField fx:id="repositoryName" prefHeight="25.0" prefWidth="211.0" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="7" />
      <Button fx:id="createEmptyRepoBtn" mnemonicParsing="false" onAction="#tryToCreateEmptyRepo" text="Create Empty Repository" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="9" />
   </children>
</GridPane>
